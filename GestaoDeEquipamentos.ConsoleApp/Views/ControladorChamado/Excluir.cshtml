@using GestaoDeEquipamentos.ConsoleApp.Models

@model ExcluirChamadoViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de Chamado";
}

<link href="~/exclusao.css" rel="stylesheet" />

<div class="formulario-exclusao">
    <p>Você tem certeza que deseja excluir o registro "<strong>@Model.Titulo</strong>"?</p>

    <div class="botoes-exclusao">
        <form action="/chamados/excluir/@Model.Id" method="post">
            <button type="submit" class="btn-confirmar">Confirmar</button>
        </form>
        <a href="/chamados/visualizar" class="btn-cancelar">Cancelar</a>
    </div>
</div>