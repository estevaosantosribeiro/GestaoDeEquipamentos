@using GestaoDeEquipamentos.ConsoleApp.Models

@model VisualizarChamadosViewModel;

@{
	Layout = "_Layout";
	ViewBag.Titulo = "Visualização de Chamados";
}

<link href="~/tabelas.css" rel="stylesheet" />
<link href="~/mensagem.css" rel="stylesheet" />

<div class="cabecalho-tabela">
    <h2>Chamados</h2>
    <a href="/chamados/cadastrar" class="btn-adicionar">+ Adicionar Chamado</a>
</div>

@if (!Model.Registros.Any())
{
    <div class="mensagem-vazia">
        Nenhum registro encontrado.
    </div>
}
else
{
    <div class="grid-registros">
        @foreach (var c in Model.Registros)
        {
            <div class="card-registro">
                <div class="campo-registro">
                    <strong>Equipamento:</strong>
                    <span>@c.NomeEquipamento</span>
                </div>
                <div class="campo-registro">
                    <strong>Título:</strong>
                    <span>@c.Titulo</span>
                </div>
                <div class="campo-registro">
                    <strong>Descrição:</strong>
                    <span>@c.Descricao</span>
                </div>
                <div class="campo-registro">
                    <strong>Data de Abertura:</strong>
                    <span>@c.DataAbertura.ToShortDateString()</span>
                </div>
                <div class="campo-registro">
                    <strong>Dias em Aberto:</strong>
                    <span>@c.TempoDecorrido dias</span>
                </div>
                <div class="acoes-registro">
                    <a class="botoes-acoes" href="/chamados/editar/@c.Id" title="Editar">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a class="botoes-acoes" href="/chamados/excluir/@c.Id" title="Excluir">
                        <i class="bi bi-trash"></i> Excluir
                    </a>
                </div>
            </div>
        }
    </div>
}
