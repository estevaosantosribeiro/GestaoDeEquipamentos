@using GestaoDeEquipamentos.ConsoleApp.Models
@using GestaoDeEquipamentos.ConsoleApp.ModuloFabricante

@model ExcluirFabricanteViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de Fabricante";
}

<link href="~/exclusao.css" rel="stylesheet" />

<div class="formulario-exclusao">
    <p>Você tem certeza que deseja excluir o registro "<strong>@Model.Nome</strong>"?</p>

    <div class="botoes-exclusao">
        <form action="/fabricantes/excluir/@Model.Id" method="post">
            <button type="submit" class="btn-confirmar">Confirmar</button>
        </form>
        <a href="/fabricantes/visualizar" class="btn-cancelar">Cancelar</a>
    </div>
</div>
