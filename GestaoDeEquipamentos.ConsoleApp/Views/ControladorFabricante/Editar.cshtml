@using GestaoDeEquipamentos.ConsoleApp.Models
@using GestaoDeEquipamentos.ConsoleApp.ModuloFabricante

@model EditarFabricanteViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Edição de Fabricante";
}

<link href="~/formulario.css" rel="stylesheet" />

<div class="form-header">
    <a href="/fabricantes/visualizar" class="btn-voltar">
        <i class="bi bi-arrow-left"></i> Voltar
    </a>
</div>

<form action="/fabricantes/editar/@Model.Id" method="post" class="formulario-base">
    <div class="form-group">
        <label for="nome">Nome do Fabricante</label>
        <input type="text" name="nome" id="nome" value="@Model.Nome" required />
    </div>

    <div class="form-group">
        <label for="email">Email do Fabricante</label>
        <input type="email" name="email" id="email" value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label for="telefone">Telefone do Fabricante</label>
        <input type="text" name="telefone" id="telefone" value="@Model.Telefone" required />
    </div>

    <div class="form-actions">
        <button type="submit" class="btn-salvar">Gravar</button>
    </div>
</form>
